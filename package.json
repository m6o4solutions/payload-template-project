		"semantic-release": "^25.0.0",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3"
	},
	"engines": {
		"node": "^18.20.2 || >=20.9.0",
		"pnpm": "^9 || ^10"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"sharp",
			"esbuild",
			"unrs-resolver"
		]
	}
